<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activy.ChiTietSanPham">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        app:title="Product details"
        android:background="#3F51B5"
        app:titleTextColor="#F7F4F3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgviewchitietsanpham"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="180dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:text="Product name"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#D1281C"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textviewgiachitietsanpham"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/spinner"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </Spinner>
            <!--<EditText-->
                <!--android:layout_margin="5dp"-->
                <!--android:padding="15dp"-->
                <!--android:background="@drawable/spinner"-->
                <!--android:id="@+id/spinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45sp" />-->
            <Button
                android:id="@+id/buttondathang"
                android:textColor="#AF605A"
                android:textSize="15dp"
                android:text="Add to cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="Product Infomation"
            android:textColor="#673AB7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>